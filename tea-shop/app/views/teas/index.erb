<h1>Teas available on <%=Date.today%></h1>

<% @teas.each do |tea| %>
    <h3><%=tea.name%></h3>
    <p>$<%="%0.2f" % [tea.price]%></p>
    <form method="POST" action="/orders">
        <input type="hidden" id="tea_id" name="tea_id" value="<%= tea.id %>">
        <input type="text" name="name" placeholder="enter your name">
        <input type="submit" value="submit">
    </form>
<% end %>